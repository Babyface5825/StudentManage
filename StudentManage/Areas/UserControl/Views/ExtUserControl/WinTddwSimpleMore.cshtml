            X.Hidden().ID((string)ViewData["WindowID"] + "_SelGxdm").Name("GxID").Text("0"),
            X.Label().X(2).Y(2).Text("投档单位代码:"),
            X.TextField().Name("Code").X(80).Y(2).Width(200),
            X.Label().X(2).Y(27).Text("投档单位名称:"),
            X.TextField().Name("Name").X(80).Y(27).Width(200).AllowBlank(false),
            X.Label().X(2).Y(52).Text("所在院校名称:"),
            X.Panel().Header(false).Layout(LayoutType.Fit).Border(false).X(80).Y(52).Width(200)
                .BodyStyle("background-color:transparent;")
                .ItemsFromPartial("~\\Areas\\UserControl\\Views\\ExtUserControl\\DataComboBox.cshtml",
                    ViewData["DataComboBox_ID"] = (string)ViewData["WindowID"] + "_cmbGxdm"),
            X.Label().X(50).Y(77).Text("批次:"),
            X.Panel().Header(false).Layout(LayoutType.Fit).Border(false).X(80).Y(77).Width(200)
