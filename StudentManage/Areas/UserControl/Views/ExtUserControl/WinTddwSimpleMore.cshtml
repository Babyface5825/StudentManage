            X.Hidden().Name("ID").Text("0"),
            X.Hidden().ID((string)ViewData["WindowID"] + "_SelPcdm").Name("Pcdm").Text("0"),
            X.Hidden().ID((string)ViewData["WindowID"] + "_SelKldm").Name("Kldm").Text("0"),
