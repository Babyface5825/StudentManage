            X.Panel()
                .Region(Region.Center)
                .Layout(LayoutType.Fit)
                .Margin(1)
                .ItemsFromPage(this, "~\\Areas\\UserControl\\Views\\ExtUserControl\\DataList.cshtml",
                    ViewData["DataList_PanelID"],
                    ViewData["DataList_ParentVariable"])
            )
