@(Html.X().Panel()
    .Region(Region.West)
    .Layout(LayoutType.Fit)    
    //.Width(180)
    .ID("Menu")
    .Header(true)
    .Collapsible(true)
    .Split(true)
    .CollapseMode(CollapseMode.Mini)
    .MarginSpec("0 0 4 4")
    .Border(false)
    .Title("菜单信息")
    .Loader(Html.X().ComponentLoader()
                .Url(Url.Action("AutoLoadMenu"))
                .Mode(LoadMode.Script)
                .Params(new { containerId = "Menu" })
    .LoadMask(lm => lm.ShowMask = true)
    )
)