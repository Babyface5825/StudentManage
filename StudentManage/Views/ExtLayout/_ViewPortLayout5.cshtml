@{
    //上中结构
    Layout = "_ExtLayout.cshtml";
    var X = Html.X();        
}

@RenderBody()

@section center
{
    @(X.Viewport()
        .Layout(LayoutType.Border)
        .Items(
            X.Panel()
                .ID("SearchPanelContainer")
                .Height(150)
                .Region(Region.North)
                .Title("详细信息")
                .Layout(LayoutType.Fit)
                .Collapsible(true)
                .Margin(1)
                .ItemsFromSection(this, "SearchPanel"),
            X.Panel()
                .Region(Region.Center)
                .Layout(LayoutType.Fit)
                .Margin(1)
                .ItemsFromPage(this, "~\\Areas\\UserControl\\Views\\ExtUserControl\\DataList.cshtml",
                    ViewData["DataList_PanelID"],
                    ViewData["DataList_ParentVariable"])
            )
    )
    @RenderSection("Hidden", true)
}